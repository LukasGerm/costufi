<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Files</title>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link type="text/css" rel="stylesheet" href="/stylesheets/materialize.min.css"  media="screen,projection"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  </head>
  <body>
    <nav class="indigo darken-2 nav">
      <div class="container">
        <div class="nav-wrapper" role="navigation"><a href="#" class="brand-logo"><%= title %></a>
          <ul class="right hide-on-med-and-down">
            <li><a href="/files/<%= user.username %>">Home</a></li>
            <!--<li><a href="/settings">Einstellungen</a></li> -->
              <% if(user.isAdmin){%>
                <li>
                  <a href="/admin"  class="right">Admin</a><br>
                </li>
              <% }%>
            <li><a href="/logout"  class="right">Logout</a></li>
          </ul>
        </div>
        <ul id="nav-mobile" class="side-nav">
          <li><a href="/files/<%= user.username %>" class="black-text">Home</a></li>
         <!-- <li><a href="/settings" class="black-text">Einstellungen</a></li> -->
            <% if(user.isAdmin){%>
          <li>
            <a href="/admin" class="black-text">Admin</a>
          </li>
            <% }%>
          <li><a href="/logout" class="black-text">Logout</a></li>
        </ul>
        <a href="#" data-activates="nav-mobile" class="button-collapse white-text left"><i class="material-icons">menu</i></a>
      </div>
    </nav>
    <div class="container">
      <div class="row">
        <div class="col s6">
          <h4>Kundendaten</h4>
        </div>
      </div>
      <div class="row">
        <div class="col s12">
          <table class="bordered">
            <tbody>
            <tr>
              <td>Kundennummer</td>
              <td><%= user.costumerid %></td>
            </tr>
            <tr>
              <td>Name</td>
              <td><%= user.first_name + " " + user.last_name %></td>
            </tr>
            <tr>
              <td>E-Mail Adresse</td>
              <td><%= user.email %></td>
            </tr>
            </tbody>

          </table>
        </div>
      </div>
      <div class="row">
        <div class="col s12">
          <h4>Auftragsdaten</h4>
        </div>
      </div>
      <div class="row">
        <ul class="collapsible" data-collapsible="accordion">
            <% for(let i = 0; i < directories.length; i++){ %>
          <li added="false" id="<%= directories[i] %>" onclick="getFiles(this,'<%= user.username %>')">
            <!--<div class="right" style="margin: 15px 10px 0 0"><a href="<%= user.username%>/bills/<%= directories[i] %>">Rechnung</a></div>-->
            <div class="right" style="margin: 15px 10px 0 0"><a href="/data/bills/<%= user.username %>/<%= directories[i] %>/bill.pdf">Rechnung</a></div>
              <div class="collapsible-header"><i class="material-icons">card_travel</i><%= directories[i] %></div>

          </li>
            <% } %>
        </ul>
      </div>
    <div id="showPicture" class="modal">
      <div class="modal-content">

      </div>
      <div class="modal-footer">

        <a href="#" class="modal-close btn-flat">Abbrechen</a>
      </div>
    </div>
    </div>

    <script type="text/javascript" src="https://code.jquery.com/jquery-3.2.1.min.js"></script>
    <script type="text/javascript" src="/js/materialize.min.js"></script>
    <script type="text/javascript" src="/js/main.js"></script>
  </body>
</html>
